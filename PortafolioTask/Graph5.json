{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Fertility Rate in OECD countries 2023",
    "fontSize": 14,
    "anchor": "start",
    "subtitle": "Source: World Bank Indicators",
    "subtitleFontSize": 11,
    "subtitleColor": "#666"
  },
  "width": 1000,
  "height": 700,
  "data": {
    "url": "https://raw.githubusercontent.com/CarolinaMolinare/CarolinaMolinare.github.io/refs/heads/main/PortafolioTask/Figure3.csv",
    "format": {
      "type": "dsv",
      "delimiter": ";"
    }
  },
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal",
      "title": "Country",
      "sort": "-y",
      "axis": {
        "labelAngle": -45,
        "labelAlign": "right"
      }
    },
    "y": {
      "field": "Fertility rate",
      "type": "quantitative",
      "title": "Fertility Rate",
      "scale": {
        "domain": [0, 3]
      }
    },
    "color": {
      "condition": [
      {
        "test": "datum['Country'] == 'Chile'",
        "value": "#74B9FF"
      },
      {
      "test": "datum['Country'] == 'OECD average'",
      "value": "#27AE60"
      }
      ],
      "value": "#A8E6CF"
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Fertility rate", "type": "quantitative", "title": "Fertility Rate", "format": ".2f"}
    ]
  }
}